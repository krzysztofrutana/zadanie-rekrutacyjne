@model zadanie_rekrutacyjne.Database.Models.Category

<div class="modal hide fade" tabindex="-1" id="delete-modal" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Szczegóły kategorii</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Delete" id="delete-form" role="form">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <div class="col">
                            <h6>
                                <b>@Html.LabelFor(c => c.Name)</b>
                                @Html.DisplayFor(c => c.Name)
                            </h6>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col">
                            @if (Model.Parent == null)
                            {
                                <h6>
                                    <b>
                                        Typ kategorii:
                                    </b>
                                    Kategoria główna
                                </h6>
                            }
                            else
                            {
                                <h6>
                                    <b>
                                        Kategoria nadrzędna:
                                    </b>
                                    @Html.DisplayFor(c => c.Parent.Name)
                                </h6>
                            }

                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark btn-delete-modal-close" data-dismiss="modal">Anuluj</button>
                <input type="submit" value="Usuń" class="btn btn-danger btn-delete-modal-delete" data-save="modal" data-id="@Model.ID" />
            </div>
        </div>
    </div>
</div>